<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/circle_center_shape_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/centercircle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/valortext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="€"
        android:maxWidth="100dp"
        android:maxHeight="40dp"
        android:textColor="@color/black"
        android:layout_marginEnd="50dp"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_center_shape_edt"
        app:layout_constraintEnd_toEndOf="@+id/circle_center_shape_edt"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="@+id/circle_center_shape_edt"
        app:layout_constraintTop_toTopOf="@+id/circle_center_shape_edt"
        app:layout_constraintVertical_bias="0.493" />


    <EditText
        android:visibility="invisible"
        android:id="@+id/valoredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="€"
        android:maxLength="4"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_center_shape_edt"
        app:layout_constraintEnd_toEndOf="@+id/circle_center_shape_edt"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="@+id/circle_center_shape_edt"
        app:layout_constraintTop_toTopOf="@+id/circle_center_shape_edt"
        app:layout_constraintVertical_bias="0.493" />

</androidx.constraintlayout.widget.ConstraintLayout>
